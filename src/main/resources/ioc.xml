<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="asep" class="com.mycompany.demo.Person">
        <property name="nama" value="Asep Cahyana"></property>
        <property name="alamat" ref="bandung"></property>
    </bean>
    
    <bean id="bandung" class="com.mycompany.demo.Address">
        <property name="jalan" value="Jl. Raya Pangalengan"></property>
        <property name="kota" value="Bandung"></property>
        <property name="kodepos" value="12345"></property>
    </bean>
</beans>